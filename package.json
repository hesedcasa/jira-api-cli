{
  "name": "jira-api-cli",
  "version": "1.4.2",
  "description": "A powerful command-line interface for Jira API interaction with support for issues, projects, boards, and multiple output formats",
  "main": "dist/index.js",
  "bin": {
    "jira-api-cli": "dist/index.js"
  },
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "tsx src/index.ts",
    "dev": "tsx src/index.ts",
    "conductor": "tsx src/conductor-cli.ts",
    "conductor:dev": "tsx src/conductor-cli.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "find-deadcode": "ts-prune",
    "format": "eslint --cache --fix --quiet . && prettier --write --cache .",
    "pre-commit": "npm run format && npm run find-deadcode"
  },
  "keywords": [
    "jira",
    "cli",
    "ai-agents",
    "api",
    "atlassian"
  ],
  "author": "Hesed",
  "license": "Apache-2.0",
  "dependencies": {
    "@toon-format/toon": "^2.0.1",
    "jira.js": "^5.2.2",
    "yaml": "^2.8.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@trivago/prettier-plugin-sort-imports": "^6.0.0",
    "@types/node": "^25.0.2",
    "@vitest/coverage-v8": "^4.0.9",
    "@vitest/ui": "^4.0.9",
    "eslint": "^9.39.1",
    "globals": "^17.1.0",
    "jiti": "^2.6.1",
    "prettier": "3.8.0",
    "ts-prune": "^0.10.3",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.46.4",
    "vitest": "^4.0.9"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hesedcasa/jira-api-cli.git"
  },
  "types": "./dist/index.d.ts",
  "bugs": {
    "url": "https://github.com/hesedcasa/jira-api-cli/issues"
  },
  "homepage": "https://github.com/hesedcasa/jira-api-cli#readme"
}
